{
  "manifest_version": 3,
  "name": "Hits Download Manager",
  "version": "1.0.0",
  "description": "Intercept downloads and send them to Hits Download Manager",
  "permissions": [
    "downloads",
    "contextMenus",
    "nativeMessaging",
    "notifications",
    "webRequest"
  ],
  "host_permissions": [
    "<all_urls>"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  }
}
