<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Light Theme Colors -->
    <Color x:Key="AccentColor">#1E88E5</Color>
    <SolidColorBrush x:Key="AccentBrush" Color="#1E88E5"/>
    <SolidColorBrush x:Key="HoverAccentBrush" Color="#2196F3"/>
    <SolidColorBrush x:Key="PressedAccentBrush" Color="#1565C0"/>
    <SolidColorBrush x:Key="DisabledAccentBrush" Color="#90CAF9"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="#F5F5F5"/>
    <SolidColorBrush x:Key="PanelBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="InputBorderBrush" Color="#E0E0E0"/>
    <SolidColorBrush x:Key="TextBrush" Color="#212121"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#757575"/>
    <SolidColorBrush x:Key="HeadingBrush" Color="#212121"/>
    <SolidColorBrush x:Key="TabBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="TabHoverBrush" Color="#F0F0F0"/>
    <SolidColorBrush x:Key="TabSelectedBrush" Color="#1E88E5"/>
</ResourceDictionary>
