<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Light Theme Color Palette -->
    <!-- Backgrounds -->
    <SolidColorBrush x:Key="BackgroundBrush" Color="#F9FAFB"/>
    <SolidColorBrush x:Key="PanelBrush" Color="#F1F1F5"/>
    <SolidColorBrush x:Key="InputBackgroundBrush" Color="#FFFFFF"/>
    <!-- Text Colors -->
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#212121"/>
    <SolidColorBrush x:Key="HeadingTextBrush" Color="#000000"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#6B7280"/>
    <SolidColorBrush x:Key="PlaceholderTextBrush" Color="#9CA3AF"/>
    <!-- Accent Colors -->
    <SolidColorBrush x:Key="AccentBrush" Color="#1E88E5"/>
    <SolidColorBrush x:Key="AccentHoverBrush" Color="#1976D2"/>
    <SolidColorBrush x:Key="AccentDisabledBrush" Color="#90CAF9"/>
    <!-- Border Colors -->
    <SolidColorBrush x:Key="BorderBrush" Color="#D1D5DB"/>
    <SolidColorBrush x:Key="FocusBorderBrush" Color="#1E88E5"/>
</ResourceDictionary>