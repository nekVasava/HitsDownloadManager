<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Light Theme Colors -->
    <Color x:Key="PrimaryColor">#0078D4</Color>
    <Color x:Key="BackgroundColor">#F4F6F8</Color>
    <Color x:Key="SurfaceColor">#FFFFFF</Color>
    <Color x:Key="TextColor">#111827</Color>
    <Color x:Key="TextSecondaryColor">#4B5563</Color>
    <Color x:Key="BorderColor">#E6E9EE</Color>
    <Color x:Key="HoverColor">#F5F5F5</Color>
    <Color x:Key="AccentColor">#0063B1</Color>
    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <!-- Additional Brushes for MainWindow -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#F4F6F8"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#111827"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#4B5563"/>
    <SolidColorBrush x:Key="SubtleBorderBrush" Color="#E6E9EE"/>
    <SolidColorBrush x:Key="DataGridHeaderBrush" Color="#0078D4"/>
    <SolidColorBrush x:Key="AccentDarkBrush" Color="#005A9E"/>
    <SolidColorBrush x:Key="DataGridRowBackground" Color="Transparent"/>
    <SolidColorBrush x:Key="DataGridRowHover" Color="#2A0A6ED1"/>
    <SolidColorBrush x:Key="DataGridSelection" Color="#0078D4"/>
</ResourceDictionary>
