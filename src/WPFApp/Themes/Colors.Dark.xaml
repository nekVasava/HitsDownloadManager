<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <!-- Dark Theme Colors -->
    <Color x:Key="PrimaryColor">#60A5FA</Color>
    <Color x:Key="BackgroundColor">#121316</Color>
    <Color x:Key="SurfaceColor">#1F2226</Color>
    <Color x:Key="TextColor">#E6E6E6</Color>
    <Color x:Key="TextSecondaryColor">#C3C7CC</Color>
    <Color x:Key="BorderColor">#2A2E33</Color>
    <Color x:Key="HoverColor">#383838</Color>
    <Color x:Key="AccentColor">#0A6ED1</Color>
    <!-- Brushes -->
    <SolidColorBrush x:Key="PrimaryBrush" Color="{StaticResource PrimaryColor}"/>
    <SolidColorBrush x:Key="BackgroundBrush" Color="{StaticResource BackgroundColor}"/>
    <SolidColorBrush x:Key="SurfaceBrush" Color="{StaticResource SurfaceColor}"/>
    <SolidColorBrush x:Key="TextBrush" Color="{StaticResource TextColor}"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="{StaticResource TextSecondaryColor}"/>
    <SolidColorBrush x:Key="BorderBrush" Color="{StaticResource BorderColor}"/>
    <SolidColorBrush x:Key="HoverBrush" Color="{StaticResource HoverColor}"/>
    <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}"/>
    <!-- Additional Brushes for MainWindow -->
    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#121316"/>
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#1F2226"/>
    <SolidColorBrush x:Key="PrimaryTextBrush" Color="#E6E6E6"/>
    <SolidColorBrush x:Key="SecondaryTextBrush" Color="#C3C7CC"/>
    <SolidColorBrush x:Key="SubtleBorderBrush" Color="#2A2E33"/>
    <SolidColorBrush x:Key="DataGridHeaderBrush" Color="#0A6ED1"/>
    <SolidColorBrush x:Key="AccentDarkBrush" Color="#084C9F"/>
    <SolidColorBrush x:Key="DataGridRowBackground" Color="Transparent"/>
    <SolidColorBrush x:Key="DataGridRowHover" Color="#330A6ED1"/>
    <SolidColorBrush x:Key="DataGridSelection" Color="#0A6ED1"/>
</ResourceDictionary>
