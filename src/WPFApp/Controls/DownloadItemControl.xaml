<UserControl x:Class="HitsDownloadManager.WPFApp.Controls.DownloadItemControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource PanelBrush}"
             Margin="0,0,0,12" xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">
    <Border CornerRadius="10" Padding="20" Background="{DynamicResource PanelBrush}">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0" Margin="0,0,0,10">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <StackPanel Grid.Column="0">
                    <materialDesign:PackIcon x:Name="FileTypeIcon" Kind="FileDownload" Width="24" Height="24" Margin="0,0,10,0" VerticalAlignment="Center"/><TextBlock x:Name="txtFilename" Text="filename.zip" FontSize="15" FontWeight="SemiBold" Foreground="{DynamicResource HeadingBrush}"/>
                    <TextBlock x:Name="txtUrl" Text="https://example.com/file.zip" FontSize="11" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,3,0,0" TextTrimming="CharacterEllipsis"/>
                </StackPanel>
                <StackPanel Grid.Column="1" Orientation="Horizontal">
                    <TextBlock x:Name="txtCompleted" Text="✓ Completed" FontSize="13" FontWeight="SemiBold" Foreground="#4CAF50" VerticalAlignment="Center" Visibility="Collapsed" Margin="0,0,12,0"/>
                    <TextBlock x:Name="txtFailed" Text="✗ Failed" FontSize="13" FontWeight="SemiBold" Foreground="#F44336" VerticalAlignment="Center" Visibility="Collapsed" Margin="0,0,12,0"/>
                    <Button x:Name="btnShowInFolder" Content="Show in Folder" Width="120" Height="32" Style="{DynamicResource PrimaryButtonStyle}" FontSize="13" Click="BtnShowInFolder_Click" Visibility="Collapsed" Margin="0,0,8,0"/>
                    <Button x:Name="btnPause" Content="Pause" Width="70" Height="32" Style="{DynamicResource PrimaryButtonStyle}" FontSize="13" Click="BtnPause_Click" Margin="0,0,8,0"/>
                    <Button x:Name="btnResume" Content="Resume" Width="100" Height="32" Style="{DynamicResource PrimaryButtonStyle}" FontSize="13" Click="BtnResume_Click" Visibility="Collapsed" Margin="0,0,8,0"/>
                    <Button x:Name="btnCancel" Content="Cancel" Width="70" Height="32" Style="{DynamicResource PrimaryButtonStyle}" FontSize="13" Click="BtnCancel_Click" Background="#C62828" BorderBrush="#C62828"/>
                </StackPanel>
            </Grid>
            <ProgressBar x:Name="progressBar" Grid.Row="1" Height="8" Minimum="0" Maximum="100" Value="0" Margin="0,0,0,8" Background="{DynamicResource InputBackgroundBrush}" Foreground="{DynamicResource AccentBrush}"/>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>
                <TextBlock x:Name="txtProgress" Grid.Column="0" Text="0%" FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}"/>
                <TextBlock x:Name="txtSize" Grid.Column="1" Text="0 MB / 0 MB" FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}" Margin="10,0,0,0"/>
                <StackPanel Grid.Column="2" Orientation="Horizontal">
                    <TextBlock x:Name="txtSpeed" Text="0 KB/s" FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,10,0"/>
                    <TextBlock x:Name="txtTimeRemaining" Text="Calculating..." FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}"/>
                </StackPanel>
            </Grid>
        </Grid>
    </Border>
</UserControl>

