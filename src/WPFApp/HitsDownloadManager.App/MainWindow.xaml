<Window x:Class="HitsDownloadManager.App.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hits Download Manager" Height="600" Width="1000" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Header -->
        <Border Grid.Row="0" Background="#007ACC" Padding="10,5">
            <TextBlock Text="Hits Download Manager" Foreground="White" FontSize="20" FontWeight="SemiBold"/>
        </Border>
        <!-- Sidebar + Content -->
        <Grid Grid.Row="1" Margin="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="200"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <!-- Sidebar -->
            <Border Background="#2D2D30" Grid.Column="0">
                <StackPanel Margin="10">
                    <TextBlock Text="Downloads" Foreground="White" Margin="0,5" FontSize="16"/>
                    <TextBlock Text="Queue" Foreground="White" Margin="0,5" FontSize="16"/>
                    <TextBlock Text="History" Foreground="White" Margin="0,5" FontSize="16"/>
                    <TextBlock Text="Settings" Foreground="White" Margin="0,5" FontSize="16"/>
                </StackPanel>
            </Border>
            <!-- Main Content -->
            <Border Grid.Column="1" Background="#F5F5F5" Margin="5,0,0,0">
                <TextBlock Text="Download List Will Appear Here" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="18" Foreground="#555"/>
            </Border>
        </Grid>
        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="#E0E0E0" Height="25">
            <TextBlock Name="StatusText" Text="Ready" FontSize="12"/>
        </StatusBar>
    </Grid>
</Window>
