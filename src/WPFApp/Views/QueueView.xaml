<Window x:Class="HitsDownloadManager.WPFApp.Views.QueueView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:local="clr-namespace:HitsDownloadManager.WPFApp.Views"
        Title="Queue" Height="600" Width="900"
        Background="{StaticResource BackgroundBrush}"
        Foreground="{StaticResource TextBrush}">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!-- Header -->
        <TextBlock Text="Downloads Queue"
                   FontSize="20"
                   FontWeight="Bold"
                   Foreground="{StaticResource AccentBrush}"
                   Margin="5"/>
        <!-- DataGrid showing Pending Downloads -->
        <DataGrid x:Name="QueueDataGrid"
                  Grid.Row="1"
                  AutoGenerateColumns="False"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  HeadersVisibility="Column"
                  SelectionMode="Single"
                  Background="{StaticResource PanelBrush}"
                  Foreground="{StaticResource TextBrush}"
                  RowBackground="{StaticResource BackgroundBrush}"
                  AlternatingRowBackground="{StaticResource InputBackgroundBrush}"
                  BorderBrush="{StaticResource InputBorderBrush}">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Filename" Binding="{Binding Filename}" Width="*"/>
                <DataGridTextColumn Header="URL" Binding="{Binding Url}" Width="2*"/>
                <DataGridTextColumn Header="File Size" Binding="{Binding FileSize}" Width="Auto"/>
                <DataGridTemplateColumn Header="Priority" Width="Auto">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <ComboBox SelectedValue="{Binding Priority, Mode=TwoWay}"
                                      Width="120"
                                      Background="{StaticResource InputBackgroundBrush}"
                                      Foreground="{StaticResource TextBrush}">
                                <ComboBoxItem Content="Low" Tag="Low"/>
                                <ComboBoxItem Content="Normal" Tag="Normal"/>
                                <ComboBoxItem Content="High" Tag="High"/>
                            </ComboBox>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Queue Position" Binding="{Binding QueuePosition}" Width="80"/>
                <DataGridTextColumn Header="Date Added" Binding="{Binding DateAdded}" Width="140"/>
            </DataGrid.Columns>
        </DataGrid>
        <!-- Batch Operation Buttons -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right" Margin="5" Spacing="10">
            <Button x:Name="StartAllButton" Content="Start All" Width="100" Style="{StaticResource AccentButtonStyle}" Margin="2"/>
            <Button x:Name="PauseAllButton" Content="Pause All" Width="100" Style="{StaticResource AccentButtonStyle}" Margin="2"/>
            <Button x:Name="CancelAllButton" Content="Cancel All" Width="100" Style="{StaticResource AccentButtonStyle}" Margin="2"/>
            <Button x:Name="ClearCompletedButton" Content="Clear Completed" Width="120" Style="{StaticResource AccentButtonStyle}" Margin="2"/>
        </StackPanel>
    </Grid>
</Window>
