<UserControl x:Class="HitsDownloadManager.Views.DownloadControlPanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="60" d:DesignWidth="800">
    <Border BorderBrush="LightGray" BorderThickness="0,1,0,0" Padding="10">
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <!-- Start/Resume Button -->
            <Button Content="▶ Start/Resume" 
                    Command="{Binding StartResumeCommand}"
                    Width="120" Height="35" Margin="5"
                    Background="#4CAF50" Foreground="White"
                    IsEnabled="{Binding CanStartResume}"/>
            <!-- Pause Button -->
            <Button Content="⏸ Pause" 
                    Command="{Binding PauseCommand}"
                    Width="100" Height="35" Margin="5"
                    Background="#FF9800" Foreground="White"
                    IsEnabled="{Binding CanPause}"/>
            <!-- Cancel Button -->
            <Button Content="✖ Cancel" 
                    Command="{Binding CancelCommand}"
                    Width="100" Height="35" Margin="5"
                    Background="#F44336" Foreground="White"
                    IsEnabled="{Binding CanCancel}"/>
            <!-- Remove Button -->
            <Button Content="🗑 Remove" 
                    Command="{Binding RemoveCommand}"
                    Width="100" Height="35" Margin="5"
                    Background="#9E9E9E" Foreground="White"
                    IsEnabled="{Binding CanRemove}"/>
            <!-- Open Folder Button -->
            <Button Content="📁 Open Folder" 
                    Command="{Binding OpenFolderCommand}"
                    Width="120" Height="35" Margin="5"
                    Background="#2196F3" Foreground="White"
                    IsEnabled="{Binding HasSelectedDownload}"/>
            <!-- Retry All Failed Button -->
            <Button Content="🔄 Retry All Failed" 
                    Command="{Binding RetryAllFailedCommand}"
                    Width="140" Height="35" Margin="5"
                    Background="#673AB7" Foreground="White"/>
        </StackPanel>
    </Border>
</UserControl>
