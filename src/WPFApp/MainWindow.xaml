<Window x:Class="HitsDownloadManager.WPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:HitsDownloadManager.Views"
        Title="Hits Download Manager" Height="650" Width="1000"
        Background="{DynamicResource BackgroundBrush}"
        WindowStartupLocation="CenterScreen"
        MinHeight="500" MinWidth="800">
    <Grid>
        <ToggleButton x:Name="ThemeToggle"
                     Style="{DynamicResource ThemeToggleButtonStyle}"
                     HorizontalAlignment="Right"
                     VerticalAlignment="Top"
                     Margin="0,15,20,0"
                     Panel.ZIndex="999"
                     Checked="ThemeToggle_Checked"
                     Unchecked="ThemeToggle_Unchecked"/>
        <TabControl Background="{DynamicResource BackgroundBrush}" BorderThickness="0" Margin="0,60,0,0" x:Name="MainTabControl" SelectionChanged="MainTabControl_SelectionChanged">
            <TabControl.Resources>
                <Style TargetType="TabItem">
                    <Setter Property="Template">
                        <Setter.Value>
                            <ControlTemplate TargetType="TabItem">
                                <Border x:Name="Border" Background="{DynamicResource TabBackgroundBrush}"
                                        BorderThickness="0" CornerRadius="8,8,0,0"
                                        Padding="20,12" Margin="2,0">
                                    <ContentPresenter x:Name="ContentSite"
                                                     ContentSource="Header"
                                                     HorizontalAlignment="Center"
                                                     VerticalAlignment="Center"/>
                                </Border>
                                <ControlTemplate.Triggers>
                                    <Trigger Property="IsSelected" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource TabSelectedBrush}"/>
                                        <Setter Property="Foreground" Value="White"/>
                                    </Trigger>
                                    <Trigger Property="IsMouseOver" Value="True">
                                        <Setter TargetName="Border" Property="Background" Value="{DynamicResource TabHoverBrush}"/>
                                    </Trigger>
                                </ControlTemplate.Triggers>
                            </ControlTemplate>
                        </Setter.Value>
                    </Setter>
                    <Setter Property="Foreground" Value="{DynamicResource TextBrush}"/>
                    <Setter Property="FontSize" Value="13"/>
                    <Setter Property="FontWeight" Value="Medium"/>
                </Style>
            </TabControl.Resources>
            <TabItem Header="⬇️ Downloads">
                <Grid Margin="30" Background="{DynamicResource BackgroundBrush}">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    <TextBlock Text="Active Downloads"
                              FontSize="28"
                              FontWeight="Bold"
                              Foreground="{DynamicResource HeadingBrush}"
                              Grid.Row="0"
                              Margin="0,0,0,25"/>
                    <Border Background="{DynamicResource PanelBrush}"
                           CornerRadius="10"
                           Padding="20"
                           Grid.Row="1"
                           Margin="0,0,0,20">
                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"/>
                                <ColumnDefinition Width="Auto"/>
                            </Grid.ColumnDefinitions>
                            <StackPanel Grid.Column="0">
                                <TextBlock Text="Download URL"
                                          FontSize="13"
                                          Foreground="{DynamicResource SecondaryTextBrush}"
                                          Margin="0,0,0,8"/>
                                <TextBox x:Name="txtDownloadUrl"
                                        Background="{DynamicResource InputBackgroundBrush}"
                                        Foreground="{DynamicResource TextBrush}"
                                        BorderBrush="{DynamicResource InputBorderBrush}"
                                        BorderThickness="1"
                                        Padding="12,10"
                                        FontSize="14"
                                        Text="Enter download URL here..." 
                                        GotFocus="TxtDownloadUrl_GotFocus" 
                                        LostFocus="TxtDownloadUrl_LostFocus"/>
                            </StackPanel>
                            <Button x:Name="btnAddDownload"
                                   Content="Add Download"
                                   Style="{DynamicResource PrimaryButtonStyle}"
                                   Grid.Column="1"
                                   Padding="25,12"
                                   Margin="15,25,0,0"
                                   FontSize="14"
                                   Click="BtnAddDownload_Click"/>
                        </Grid>
                    </Border>
                    <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto"><StackPanel><!-- Active Downloads Section --><TextBlock Text="Active Downloads" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource HeadingBrush}" Margin="0,0,0,15"/><StackPanel x:Name="activeDownloadsContainer" Margin="0,0,0,30"></StackPanel><!-- Recent Completed Section --><TextBlock Text="Recent Completed (Last 5)" FontSize="18" FontWeight="SemiBold" Foreground="{DynamicResource HeadingBrush}" Margin="0,0,0,15"/><StackPanel x:Name="completedDownloadsContainer"></StackPanel></StackPanel></ScrollViewer>
                </Grid>
            </TabItem>
            <TabItem Header="⚙️ Settings">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel Margin="30" MaxWidth="750">
                        <TextBlock Text="Settings" FontSize="24" FontWeight="Bold" Foreground="{DynamicResource HeadingBrush}" Margin="0,0,0,30"/>
                        <!-- Download Location -->
                        <Border Background="{DynamicResource PanelBrush}" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Download Location" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource HeadingBrush}" Margin="0,0,0,12"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>
                                    <TextBox x:Name="txtDownloadFolderPath" Text="C:\Downloads" Height="40" VerticalContentAlignment="Center" 
                                             FontSize="14" Padding="12" Background="{DynamicResource InputBackgroundBrush}" 
                                             Foreground="{DynamicResource TextBrush}" BorderThickness="0" IsReadOnly="True"/>
                                    <Button x:Name="btnBrowseFolder" Content="Browse" Grid.Column="1" Width="100" Height="40" 
                                            Margin="10,0,0,0" Style="{DynamicResource PrimaryButtonStyle}" Click="BtnBrowseFolder_Click"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        <!-- Concurrent Downloads -->
                        <Border Background="{DynamicResource PanelBrush}" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Concurrent Downloads" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource HeadingBrush}" Margin="0,0,0,12"/>
                                <TextBlock Text="Number of simultaneous downloads (1-10)" FontSize="12" Foreground="{DynamicResource SecondaryTextBrush}" Margin="0,0,0,10"/>
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="80"/>
                                    </Grid.ColumnDefinitions>
                                    <Slider x:Name="sliderConcurrent" Minimum="1" Maximum="10" Value="3" TickFrequency="1" 
                                            IsSnapToTickEnabled="True" VerticalAlignment="Center" ValueChanged="SliderConcurrent_ValueChanged"/>
                                    <TextBlock x:Name="txtConcurrentValue" Grid.Column="1" Text="3" FontSize="16" FontWeight="SemiBold" 
                                               Foreground="{DynamicResource HeadingBrush}" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Grid>
                            </StackPanel>
                        </Border>
                        <!-- Notifications -->
                        <Border Background="{DynamicResource PanelBrush}" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Notifications" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource HeadingBrush}" Margin="0,0,0,12"/>
                                <CheckBox x:Name="chkNotifyComplete" Content="Show notification when download completes" 
                                          FontSize="14" Foreground="{DynamicResource TextBrush}" IsChecked="True" Margin="0,0,0,8"/>
                                <CheckBox x:Name="chkNotifyFailed" Content="Show notification when download fails" 
                                          FontSize="14" Foreground="{DynamicResource TextBrush}" IsChecked="True"/>
                            </StackPanel>
                        </Border>
                        <!-- Auto-start Downloads -->
                        <Border Background="{DynamicResource PanelBrush}" CornerRadius="10" Padding="20" Margin="0,0,0,15">
                            <StackPanel>
                                <TextBlock Text="Behavior" FontSize="16" FontWeight="SemiBold" Foreground="{DynamicResource HeadingBrush}" Margin="0,0,0,12"/>
                                <CheckBox x:Name="chkAutoStart" Content="Start downloads automatically" 
                                          FontSize="14" Foreground="{DynamicResource TextBrush}" IsChecked="True" Margin="0,0,0,8"/>
                                <CheckBox x:Name="chkConfirmCancel" Content="Confirm before canceling downloads" 
                                          FontSize="14" Foreground="{DynamicResource TextBrush}" IsChecked="False"/>
                            </StackPanel>
                        </Border>
                        <!-- Save Button -->
                        <Button x:Name="btnSaveSettings" Content="Save Settings" Width="150" Height="42" 
                                Style="{DynamicResource PrimaryButtonStyle}" FontSize="14" Click="BtnSaveSettings_Click" 
                                HorizontalAlignment="Left" Margin="0,10,0,0"/>
                    </StackPanel>
                </ScrollViewer>
            </TabItem>

            <TabItem Header="📜 History">
                <views:HistoryView/>
            </TabItem>
            <TabItem Header="⏳ Queue">
                <Grid Margin="30">
                    <TextBlock Text="Download Queue"
                              FontSize="28"
                              FontWeight="Bold"
                              Foreground="{DynamicResource HeadingBrush}"
                              VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="🔧 Advanced">
                <Grid Margin="30">
                    <TextBlock Text="Advanced Options"
                              FontSize="28"
                              FontWeight="Bold"
                              Foreground="{DynamicResource HeadingBrush}"
                              VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="📊 Stats">
                <Grid Margin="30">
                    <TextBlock Text="Statistics"
                              FontSize="28"
                              FontWeight="Bold"
                              Foreground="{DynamicResource HeadingBrush}"
                              VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
            <TabItem Header="ℹ️ About">
                <Grid Margin="30">
                    <TextBlock Text="About"
                              FontSize="28"
                              FontWeight="Bold"
                              Foreground="{DynamicResource HeadingBrush}"
                              VerticalAlignment="Top"/>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>




