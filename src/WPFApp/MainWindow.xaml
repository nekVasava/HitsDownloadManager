<Window x:Class="HitsDownloadManager.WPFApp.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Hits Download Manager" Height="600" Width="1200"
        WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="10">
            <TextBox Width="700" 
                     Text="{Binding NewDownloadUrl, UpdateSourceTrigger=PropertyChanged}" 
                     VerticalContentAlignment="Center"
                     Margin="0,0,5,0"/>
            <Button Content="Add Download" Command="{Binding AddDownloadCommand}" Width="120" Margin="0,0,5,0"/>
            <Button Content="Browse..." Command="{Binding BrowseDirectoryCommand}" Width="100"/>
        </StackPanel>
        <DataGrid Grid.Row="1" 
                  ItemsSource="{Binding Downloads}" 
                  SelectedItem="{Binding SelectedDownload}"
                  AutoGenerateColumns="False"
                  IsReadOnly="True"
                  SelectionMode="Single"
                  CanUserAddRows="False"
                  CanUserDeleteRows="False"
                  Margin="10">
            <DataGrid.Columns>
                <DataGridTextColumn Header="Filename" Binding="{Binding Filename}" Width="*" MinWidth="150"/>
                <DataGridTextColumn Header="Status" Binding="{Binding Status}" Width="100"/>
                <DataGridTextColumn Header="Progress" Binding="{Binding Progress, StringFormat={}{0:F2}%}" Width="80"/>
                <DataGridTextColumn Header="Speed" Binding="{Binding Speed}" Width="100"/>
                <DataGridTextColumn Header="Size" Binding="{Binding TotalSizeFormatted}" Width="100"/>
                <DataGridTextColumn Header="Downloaded" Binding="{Binding DownloadedSizeFormatted}" Width="110"/>
                <DataGridTextColumn Header="Time Left" Binding="{Binding TimeRemaining}" Width="100"/>
                <DataGridTextColumn Header="Retries" Binding="{Binding RetryCount}" Width="70"/>
            </DataGrid.Columns>
        </DataGrid>
        <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Center" Margin="10">
            <Button Content="Pause" Command="{Binding PauseDownloadCommand}" Width="100" Margin="5"/>
            <Button Content="Resume" Command="{Binding ResumeDownloadCommand}" Width="100" Margin="5"/>
            <Button Content="Cancel" Command="{Binding CancelDownloadCommand}" Width="100" Margin="5"/>
        </StackPanel>
    </Grid>
</Window>
