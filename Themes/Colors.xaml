<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
  <!-- Accent Colors -->
  <Color x:Key="AccentColor">#0078D4</Color>
  <Color x:Key="AccentDarkColor">#005A9E</Color>
  <Color x:Key="AccentLightColor">#1E90FF</Color>
  <SolidColorBrush x:Key="AccentBrush" Color="{StaticResource AccentColor}" />
  <SolidColorBrush x:Key="AccentDarkBrush" Color="{StaticResource AccentDarkColor}" />
  <SolidColorBrush x:Key="AccentLightBrush" Color="{StaticResource AccentLightColor}" />
  <!-- Light Theme Colors -->
  <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#F4F6F8"/>
  <SolidColorBrush x:Key="CardBackgroundBrush" Color="#FFFFFF"/>
  <SolidColorBrush x:Key="PrimaryTextBrush" Color="#111827"/>
  <SolidColorBrush x:Key="SecondaryTextBrush" Color="#4B5563"/>
  <SolidColorBrush x:Key="SubtleBorderBrush" Color="#E6E9EE"/>
  <SolidColorBrush x:Key="DataGridHeaderBrush" Color="#0078D4"/>
  <!-- Status Colors -->
  <SolidColorBrush x:Key="SuccessBrush" Color="#16A34A"/>
  <SolidColorBrush x:Key="WarningBrush" Color="#F59E0B"/>
  <SolidColorBrush x:Key="ErrorBrush" Color="#DC2626"/>
  <!-- DataGrid Colors -->
  <SolidColorBrush x:Key="DataGridRowBackground" Color="Transparent"/>
  <SolidColorBrush x:Key="DataGridRowHover" Color="#0A6ED12A"/>
  <SolidColorBrush x:Key="DataGridSelection" Color="#084C9F"/>
</ResourceDictionary>
